<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>C:/Users/ARGE/Desktop/testmanagment/logs/application.log</file> <!-- Belirtilen dosya yolu -->
        <append>true</append> <!-- Logların dosyaya eklenmesini sağlar -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern> <!-- Log formatı -->
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE"/> <!-- Log dosyasına referans -->
    </root>
</configuration>